<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/home_bal_bg"
    android:layout_marginVertical="5dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/payerNameLY"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintTextColor="@color/white"
        android:hint="Payer's Name(Required)"
        android:textColorHint="#ccc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginHorizontal="3dp"
        app:boxStrokeColor="@color/customColor"
        android:layout_marginVertical="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bottom_border"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintTextColor="@color/white"
        android:hint="Payer's Email(Optional)"
        android:textColorHint="#ccc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="3dp"
        app:boxStrokeColor="@null">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bottom_border"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintTextColor="@color/white"
        android:textColorHint="#ccc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Payer's Phone(Optional)"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="3dp"
        app:boxStrokeColor="@color/customColor">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bottom_border"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:textSize="18sp"
            android:inputType="phone"
            android:textCursorDrawable="@null"/>
    </com.google.android.material.textfield.TextInputLayout>

    <include layout="@layout/shift_info"/>
</LinearLayout>