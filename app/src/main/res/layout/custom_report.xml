<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reportItem"
    android:background="@color/customBottomColor"
    android:orientation="vertical"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boss Miller Nigerian PLC INC."
            android:textAlignment="textStart"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingEnd="5dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/poppins_light"
            android:textSize="18sp"
            android:layout_toStartOf="@+id/synced"
            android:singleLine="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/synced"
            android:layout_alignParentEnd="true"
            android:src="@drawable/synced"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12-12-2020 15:11pm"
            android:textAlignment="textStart"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:textStyle="italic|normal"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/amount"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="NGN 50000"
            android:fontFamily="@font/poppins_light"
            />
    </RelativeLayout>

</LinearLayout>